# Public site URL (used for server-side redirects)
NEXT_PUBLIC_SITE_URL=https://pakketadvies.nl

# iDIN toggle (client-side). Set true only after server-side iDIN is configured.
NEXT_PUBLIC_IDIN_ENABLED=false

# iDIN server-side toggle and provider configuration
IDIN_ENABLED=false
IDIN_PROVIDER=signicat
IDIN_CLIENT_ID=
IDIN_CLIENT_SECRET=
IDIN_REDIRECT_URI=https://pakketadvies.nl/api/idin/callback

# Signicat OIDC configuration
# Either set a full discovery URL OR set an issuer base URL
# Example discovery: https://<your-signicat-domain>/auth/open/.well-known/openid-configuration
IDIN_DISCOVERY_URL=
IDIN_ISSUER_URL=

# Optional scopes (space separated)
IDIN_SCOPES="openid profile email"


